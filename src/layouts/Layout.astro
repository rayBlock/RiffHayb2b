---
import '../styles/tailwind.css';

import type { Simplify } from '@t3-oss/env-core';

// import pwf from '../assets/b2b7.svg?url';
import CheckerOverlay from '../components/head/CheckerOverlay.astro';
// import Posthog from '../components/head/Posthog.astro';
import SEO, { type Props as SeoProps } from '../components/head/SEO.astro';

export type Props = Simplify<SeoProps>;
const props = Astro.props;
// Supports weights 100-900
import '@fontsource-variable/montserrat';
// Supports weights 100-700
import '@fontsource-variable/roboto-mono';
// Supports weights 400-700
import '@fontsource-variable/lora';
// Supports weights 300-700
import '@fontsource-variable/quicksand';
// Supports weights 200-700
import '@fontsource-variable/oswald';
// Supports weights 200-900
import '@fontsource-variable/mulish';
// Supports weights 100-900
import '@fontsource-variable/rokkitt';
// Supports weights 100-900
import '@fontsource-variable/hepta-slab';
// Supports weights 100-900
import '@fontsource-variable/aleo';
// Supports weights 100-900
import '@fontsource-variable/heebo';
// Supports weights 300-900
import '@fontsource-variable/red-hat-display';
// Supports weights 400-900
import '@fontsource-variable/cinzel';
// Supports weights 300-700
import '@fontsource-variable/teko';
// Supports weights 200-700
import '@fontsource-variable/yanone-kaffeesatz';
// Supports weights 200-700
import '@fontsource-variable/readex-pro';
// Supports weights 300-700
import '@fontsource-variable/red-rose';
// Supports weights 100-900
import '@fontsource-variable/tourney';
// Supports only weight 400
import '@fontsource-variable/nabla';
// Supports weights 300-900
import '@fontsource-variable/sansita-swashed';
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<!-- <link rel="icon" type="image/svg+xml" href={pwf} /> -->
		<meta name="generator" content={Astro.generator} />
		<SEO {...props} />
		<!-- <Posthog /> -->
		{import.meta.env.DEV && <CheckerOverlay />}
	</head>
	<body class="md:overscroll-y-none">
		<slot />
	</body>

</html>
